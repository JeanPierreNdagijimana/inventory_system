//ejs to display all roles in a table
<table class="table table-striped table-bordered">

    <thead>

        <tr>

            <th>Role name</th>

            <th>Role code</th>

        </tr>

    </thead>

    <tbody>

        <% for(var i=0; i<roles.length; i++) {%>

            <tr>

                <td><%= roles[i].name %></td>

                <td><%= roles[i].code %></td>

                <td>

                    <a href="/roles/<%= roles[i]._id %>" class="btn btn-primary">View</a>

                    <a href="/roles/<%= roles[i]._id %>/edit" class="btn btn-warning">Edit</a>

                    <form action="/roles/<%= roles[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">

                        <button class="btn btn-danger">Delete</button>

                    </form>

                </td>

            </tr>

        <% } %>

    </tbody>