<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Add Device
      </h1>
      <%- include ('../partials/messages'); -%>
        <form action="/devices/new" method="POST">
          <div class="form-group">
            <label for="name">Device Type</label>
            <select class="form-control" name="device_types_id" id="device_types_id">
              <% device_types.forEach(function(Device_type) { %>
                <option value="<%=Device_type.id %>">
                  <%=Device_type.name %>
                </option>
                <% }); %>
            </select>
          </div>
          <div class="form-group">
            <label for="model">Model</label>
            <input type="text" id="model" name="model" class="form-control" placeholder="Enter device model"
              value="<%= typeof model != 'undefined' ? model : '' %>" />
          </div>
          <div class="form-group">
            <label for="serial_number">Serial number</label>
            <input type="text" id="serial_number" name="serial_number" class="form-control"
              placeholder="Enter Device Serial number"
              value="<%= typeof serial_number != 'undefined' ? serial_number : '' %>" />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Add Device
          </button>
        </form>
    </div>
  </div>
</div>