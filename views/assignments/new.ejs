<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Assign a device </h1>
        <%- include ('../partials/messages'); -%>
        <form action="/assignments/new" method="POST">
          <div class="form-group">
            <label for="employees_id">Choose Employee</label>
            <select class ="form-control" id="employees_id" name="employees_id">
              <% employees.forEach(employee => { %>
                <option value="<%= employee.id %>"><%= employee.email %></option>
              <% }) %>
            </select>
          </div>
        
          <div class="form-group">
            <label for="devices_id">choose the Device code</label>
            <select class= "form-control" id="devices_id" name="devices_id">
              <% devices.forEach(device => { %>
                <option value="<%= device.id %>"><%= device.code %></option>
              <% }) %>
            </select>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Add</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    // Initialize Select2 for the employee and device select inputs
    $(document).ready(function() {
      $('#employees_id').select2();
      $('#devices_id').select2();
    });
  </script>

  